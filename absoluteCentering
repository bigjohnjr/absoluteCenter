.center {
  	position: absolute;
  	top: 50%;
  	left: 50%;
  	transform: translate(-50%, -50%);	
  }

.horizontal-center {
	  position: relative;
    top: 0;
    left: 50%;
    transform: translate(-50%, 0%);
 } 

.vertical-center {
  	position: absolute;
  	top: 0%;
  	left: 50%;
  	transform: translate(0%, -50%);	
  } 
